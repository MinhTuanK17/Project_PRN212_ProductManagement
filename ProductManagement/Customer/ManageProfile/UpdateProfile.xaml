<Window x:Class="ProductManagement.Customer.ManageProfile.UpdateProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManagement.Customer.ManageProfile"
        mc:Ignorable="d"
        Title="UpdateProfile" Height="523" Width="730"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False" WindowStyle="None">
    <Grid Margin="0,10,0,0" Background="#FFEEEEEE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="622*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="376"/>
            <RowDefinition Height="108.04"/>
        </Grid.RowDefinitions>

        <!-- Row for Logout button -->

        <Grid Margin="0,0,0,98" HorizontalAlignment="Center" Width="622" Grid.Column="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="118*"/>
                <ColumnDefinition Width="207*"/>
                <ColumnDefinition Width="118*"/>
                <ColumnDefinition Width="207*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="75*"/>
            </Grid.RowDefinitions>
            <TextBlock FontSize="36" VerticalAlignment="Top" Height="42" HorizontalAlignment="Left" FontWeight="Bold" Grid.Column="1" Width="245"  Foreground="#FFFF6F00" Grid.ColumnSpan="3" Margin="75,10,0,0">
                Update Profile
            </TextBlock>
            <TextBlock Grid.Row ="1" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="10,0,198,0" Height="22" Grid.ColumnSpan="2">
                Full Name:
            </TextBlock>
            <TextBox Grid.Row ="1" Grid.Column="1" Margin="30,0,10,0" Name="txtFullName" TabIndex="1" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35" Grid.ColumnSpan="3"/>

            <TextBlock Grid.Row="2" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="10,0,198,0" Height="21" Grid.ColumnSpan="2">
                Email:
            </TextBlock>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="30,0,10,0" Name="txtEmail" TabIndex="1" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35"/>

            <TextBlock Grid.Row="2" Grid.Column="2" FontSize="16" VerticalAlignment="Center" Margin="10,0,198,0" Height="21" Grid.ColumnSpan="2">
                Gender:
            </TextBlock>
            <CheckBox Grid.Row="2" Grid.Column="3" Margin="30,0,10,0" Name="txtGender" TabIndex="1" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35"/>


            <TextBlock Grid.Row="3" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="10,0,198,0" Height="21" Grid.ColumnSpan="2">
                Phone:
            </TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="30,0,10,0" Name="txtPhone" TabIndex="1" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35"/>

            <TextBlock Grid.Row="3" Grid.Column="2" FontSize="16" VerticalAlignment="Top" Margin="10,18,198,0" Height="21" Grid.ColumnSpan="2">
                Date of Birth:
            </TextBlock>
            <DatePicker Grid.Row="3" Margin="30,0,10,0" Name="txtDob" TabIndex="7" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="38" Grid.Column="3"/>

            <TextBlock Grid.Row="4" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="10,0,198,0" Height="21" Grid.ColumnSpan="2">
                Address:
            </TextBlock>
            <TextBox Grid.Row="4" Grid.Column="1" Margin="30,0,10,0" Name="txtAddress" TabIndex="1" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="35" Grid.ColumnSpan="3"/>

        </Grid>

        <Grid Margin="-31,24,-44,0" Grid.Row="1" Grid.ColumnSpan="3" Height="73" VerticalAlignment="Top">

            <Button
        Grid.Row="0"
        Margin="348,15,180,15"
        Content="Save" BorderBrush="Black"
        FontSize="20" TabIndex="8"
        Click="Save_Click" Cursor="Hand" FontWeight="Bold" Width="115" HorizontalAlignment="Center" Background="#FFFFA54A"/>

            <Button
        Grid.Row="0"
        Margin="505,14,18,16" TabIndex="9"
        Content="Cancel" BorderBrush="Black"
        FontSize="20" Click="Cancel_Click" Cursor="Hand" Width="115" FontWeight="Bold" Background="#FFEBE0E0" HorizontalAlignment="Center"
    />
        </Grid>
    </Grid>
</Window>